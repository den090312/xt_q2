    if (IsPost)
    {

    }
}

@using WebPL.Models;
@using Entities;
@using Common;

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/Scripts/script.js"></script>
    <link rel="stylesheet" href="~/Content/styles.css" type="text/css" />
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon">
    <title>Весёлые соседи - интернет-магазин</title>
</head>
<body>
    <div id="main" class="main">
        @{
            var currentUser = Index.CurrentUser;
            var currentRoleId = Index.CurrentUser.IdRole;
            var currentRoleName = string.Empty;

            if (currentRoleId == 0)
            {
                currentRoleName = currentUser.Name;
            }

            if (Dependencies.RoleLogic.NoRoles())
            {
                Index.LoadDemoRoles(out Role roleGuest, out Role roleCustomer, out Role roleManager, out Role roleAdmin, out Role roleSuperAdmin);
                Index.LoadDemoUsers(roleGuest, roleCustomer, roleManager, roleAdmin, roleSuperAdmin);
            }

            if (Dependencies.ProductLogic.NoProducts())
            {
                Index.LoadDemoProducts();
            }
        }
        <p class="currentUserName">User name: @(currentUser.Name)</p>
        <p class="currentUserRole">Role: @currentRoleName</p>
        @{
            if (Index.CurrentUser == Entities.User.Guest)
            {
                @Html.Partial("~/Views/Authentication.cshtml");
            }
        }
    </div>
</body>
</html>